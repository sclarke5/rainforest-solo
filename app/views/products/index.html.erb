<h1>RainForest :)</h1>


<section>
  <% @products.each do |product| %>
  <%= link_to("New Product", new_product_path) %>
  <h2><%= product.name %></h2>
  <img src="/pic<%= product.id %>.jpeg" alt="laptop">
  <h3><%= product.description %></h3>
  <h3><%= product.price_in_cents %></h3>
  <h3><%= link_to("Show Product", product_path(product.id)) %></h3>
  <% end %>
</section>
